<div class= "mycard">
  <div class="card auth-card input-field center">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.text_field :first_name, autofocus: true,placeholder:"First Name",class: "input-field"%>

      <%= f.text_field :last_name, autofocus: true,placeholder:"Last Name",class: "input-field"%>

      <%= f.email_field :email, autofocus: true, autocomplete: "Email",placeholder:"First Name",class: "input-field" %>



      <% if @minimum_password_length %>
        <% length = "(#{@minimum_password_length} characters minimum)" %> 
      <% else %>
        <% length = "" %>
      <% end %>

      <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password #{length}" ,class: "input-field"%>

      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Repeat Password" ,class: "input-field"%>

      <div class="sub-button">
        <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block btn waves-effect waves-light #64b5f6 blue darken-1"  %>
      </div>
    <% end %>

    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
